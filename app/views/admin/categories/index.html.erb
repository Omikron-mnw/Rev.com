<div class="container">
  <div class="row">

    <!-- カテゴリーの新規登録フォーム -->
    <div class="">
      <%= form_with model: @category, url: admin_categories_path, method: :post, local: true do |f| %>
         <div>
           <%= f.label :"カテゴリー名" %>
         </div>
         <div>
           <%= f.text_field :name, class: "form-control" %>
         </div>
         <div>
           <%= f.submit "登録する", class: "btn btn-secondary ml-3 mt-3" %>
         </div>
      <% end %>
    </div>

    <!-- カテゴリー一覧表示 -->
    <div class="">
      <p>カテゴリー一覧</p>
      <table>
        <thead>
          <tr>
            <th>カテゴリー名</th>
            <th class=""></th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td>
                <%= category.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_category_path(category.id), class: "btn btn-secondary" %>
              </td>
            </tr>
          <% end %>
        </tbody>

        <tfoot>
        </tfoot>
      </table>
    </div>

  </div>
</div>