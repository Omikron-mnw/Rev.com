<div class="comtainer">
  <div class="row">
    <h2>プロフィール</h2>
    <div class="">
      <!--マイページ編集フォーム-->
      <%= form_with model: @user, url: user_path, method: :patch, local: true do |f| %>
        <!--ユーザーイメージ-->
        <div>
          <%= f.attachment_field :profile_image, size: "200x200", class: "rounded-circle" %>
        </div>
        <!--ユーザーニックネーム-->
        <div>
          <p><%= f.label "ニックネーム" %></p>
          <p><%= f.text_field :name, class: "form-control" %></p>
        </div>
        <!--メールアドレス-->
        <div>
          <p><%= f.label "メールアドレス" %></p>
          <p><%= f.text_field :email, class: "form-control" %></p>
        </div>
        <!--自己紹介-->
        <div>
          <p><%= f.label "自己紹介" %></p>
          <p><%= f.text_field :introduction, class: "form-control" %></p>
        </div>
        <!--更新ボタン-->
        <div>
          <%= f.submit "更新する", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>