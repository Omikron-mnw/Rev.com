<div class="container">
  <div class="swiper-container">
    <div class="swiper-wrapper">
      <div class="swiper-slide theTarget">
        <% random.each do |comic| %>
          <div>
            <%= link_to comic_path(comic) do %>
                <div><%= image_tag comic.image_url, :size => "145x200" %></div>
                <p><%= comic.title %></p>
            <% end %>

            <div>
              <p class="star-rating-front" style="width: <%= comic.review_rate_percentage %>"></p>
              <div id="avg_rate-<%= comic.isbn %>"></div>

              <script>
                  $('#avg_rate-<%= comic.isbn %>').raty({
                    size:     36,
                    starOff:  '<%= asset_path('star-off.png') %>',
                    starOn :  '<%= asset_path('star-on.png') %>',
                    starHalf: '<%= asset_path('star-half.png') %>',
                    half:     true,
                    readOnly: true,
                    score:    <%= comic.avg_rate.to_f.round(1) %>
                  });
              </script>

            </div>
            <p><%= comic.avg_rate %></p>
          </div>
        <% end %>
      </div>
       <!--ページネーションを表示する場合 -->
      <div class="pager"></div>

       <!--前後スライドへのナビゲーションボタン(矢印)を表示する場合 -->
      <div class="button-prev"></div>
      <div class="button-next"></div>

    </div>
  </div>
</div>

