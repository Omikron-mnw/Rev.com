<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
<div id="review-slider">
  <% revdom.each do |review| %>
    <div class="review-slide-item row">
      <div class="col-sm-3">
        <%= link_to review.user do %>
          <%= attachment_image_tag review.user, :profile_image, size: "50x50", format: 'jpg', fallback: "no_image.jpg", class: "rounded-circle" %>
        <% end %>
        <p class="review-user-path">
          <%= link_to user_path(review.user.id) do %>
            <p><%= review.user.name %></p>
          <% end %>
        </p>
        <p class="date"><%= review.created_at.strftime('%Y/%m/%d') %></p>
      </div>
      <div class="col-sm-5 mb-3">
        <div class="reviews-content">
          <h5>
            <%= link_to comic_path(review.comic) do %>
              <%= review.comic.title %>
            <% end %>
          </h5>

          <h4 class="rate-number mb-3">評価：<%= review.rate %>点</h4>

          <!--星評価-->
          <div id="star-rate-<%= review.id %>" class="rate-stars"></div>
            <script>
              $('#star-rate-<%= review.id %>').raty({
                size:     36,
                starOff:  '<%= asset_path('star-off.png') %>',
                starOn :  '<%= asset_path('star-on.png') %>',
                starHalf: '<%= asset_path('star-half.png') %>',
                half:     true,
                readOnly: true,
                score:    <%= review.rate %>,
              });
            </script>
          <!--/星評価-->

          <!--レビュー内容-->
          <p>
            <%= link_to comic_review_path(comic_id: review.comic.isbn, id: review.id) do %>
              <p class="review-body-path"><%= review.review %></p>
            <% end %>
          </p>
          <!--コメント数-->
          <p>
            <i class="far fa-comment-alt"><%= review.comments.count %></i>
          </p>


        </div>
      </div>

    </div>
  <% end %>
</div>