<div class="container">
  <div class="row">
    <!--コミック画像-->
    <div>
      <%= attachment_image_tag @comic, :comic_image, size: "220x300", format: 'jpg', fallback: "no_image.jpg", class: "rounded mt-5" %>
    </div>
    <!--コミック詳細-->
    <table>
      <tr>
        <!--タイトル-->
        <td><%= @comic.title %></td>
      </tr>
      <tr>
        <!--作者-->
        <td><%= @comic.author %></td>
      </tr>
      <tr>
        <!--出版社-->
        <td><%= @comic.publisher %></td>
      </tr>
      <tr>
        <!--カテゴリー-->
        <td><%= @comic.category.name %></td>
      </tr>
    </table>
    <!--ストーリー-->
    <div>
      <%= @comic.body %>
    </div>

    <!--管理者の場合-->
    <% if admin_signed_in? %>
      <!--編集ボタン-->
      <div><%= link_to "編集する", edit_admin_comic_path(@comic.id), class: "btn btn-secondary" %></div>
      <!--削除ボタン-->
      <div><%= link_to "削除する", admin_comic_path(@comic.id), method: :delete, class: "btn btn-danger" %></div>

    <!--ユーザーの場合-->
    <% elsif user_signed_in? %>
      <div><%= link_to "レビューを書く", new_comic_review_path(@comic.id), class: "btn btn-secondary" %></div>

    <!--登録していないまたはログインしていない場合-->
    <% else %>
    <% end %>

    <!--レビュー平均-->
    <p class="star-rating-front" style="width: <%= @comic.review_rate_percentage %>"></p>
    <div id="avg_rate-<%= @comic.id %>"></div>

      <script>
          $('#avg_rate-<%= @comic.id %>').raty({
            size:     36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn :  '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            half:     true,
            readOnly: true,
            score:    "#{comic.reviews.average(:rate).to_f.round(1)}",
          });
      </script>

    <p><%= @comic.avg_rate %>点（<%= @comic.reviews.count %>件のレビュー）</p>


    <!--レビュー一覧-->
    <% if @reviews.present? %>
      <% @reviews.each do |review| %>

        <div class="row reviews">
          <div class="col-md-2 reviews-user">
            <%= link_to review.user do %>
              <%= attachment_image_tag @user, :profile_image ,width: '100px' %>
            <% end %>
            <p class="reviews-title"><%= link_to review.user.name, review.user %></p>
          </div>
          <div class="col-md-6 mb-3">
            <div class="reviews-content">
              <p><%= review.created_at.strftime('%Y/%m/%d') %></p>
              <h4 class="mb-3">評価：<%= review.rate %>点</h4>

              <!--星評価-->
             <div id="star-rate-<%= review.id %>"></div>
              <script>
                $('#star-rate-<%= review.id %>').raty({
                  size:     36,
                  starOff:  '<%= asset_path('star-off.png') %>',
                  starOn :  '<%= asset_path('star-on.png') %>',
                  starHalf: '<%= asset_path('star-half.png') %>',
                  half:     true,
                  readOnly: true,
                  score:    <%= review.rate %>,
                });
              </script>
            <!--/星評価-->

              <%= link_to comic_review_path(review.id) do %>
                <p><%= review.review %></p>
              <% end %>
              <!--%= attachment_image_tag review.picture.url, class:'img-fluid' if review.picture? %>-->
            </div>
          </div>
          <div class="col-md-4">
            <%= link_to review.comic do %>
              <div class="reviews-comic">
                <img src="<%= review.comic.comic_image_url %>" alt="">
                <p><%=  review.comic.title %></p>
              </div>
            <%end %>
          </div>

          <div class="col-md-12 edit-button">
            <% if current_user == review.user %>
              <%= link_to '編集', edit_comic_review_path(review), method: :get, class:'btn btn-default' %>
              <%= link_to '削除', comic_review_path(review), method: :delete, class:'btn btn-default' %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>

  </div>
</div>